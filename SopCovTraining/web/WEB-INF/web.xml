<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>sopcov.servlet.MainServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>SignInOrUpServlet</servlet-name>
        <servlet-class>sopcov.servlet.SignInOrUpServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>sopcov.servlet.SignInServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>SignUpRequestServlet</servlet-name>
        <servlet-class>sopcov.servlet.SignUpRequestServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet.do</url-pattern>
    </servlet-mapping>  
    
    <servlet-mapping>
        <servlet-name>SignInOrUpServlet</servlet-name>
        <url-pattern>/SignInOrUpServlet.do</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/SignInServlet.do</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>SignUpRequestServlet</servlet-name>
        <url-pattern>/SignUpRequestServlet.do</url-pattern>
    </servlet-mapping>
       
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <context-param>
        <param-name>dbuserid</param-name>
        <param-value>prog</param-value>
    </context-param>
    
    <context-param>
        <param-name>dbuserpswd</param-name>
        <param-value>prog</param-value>
    </context-param>
    
    <context-param>
        <param-name>dbcatalog</param-name>
        <param-value>sopcov</param-value>
    </context-param>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
</web-app>
